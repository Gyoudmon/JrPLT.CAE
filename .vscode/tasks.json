{
    "version": "2.0.0",
 
    "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": true,
        "panel": "dedicated",
        "showReuseMessage": false,
        "clear": true
    },
    
    "tasks": [
        {
            "label": "JrPLT 教室[Release]",
            "detail": "构建和运行 JrPLT 教室",
            "command": "raco",
            "type": "cppbuild",
            "problemMatcher": [ "$gcc" ],
            "args": [ "wisemon", "-d", "cc" ],
            "options": { "cwd": "${workspaceFolder}" },
            "group": { "kind": "build", "isDefault": false },
            "windows": { "problemMatcher": ["$msCompile"] }
        },

        {
            "type": "cppbuild",
            "label": "JrPLT 教室[Debug]",
            "detail": "构建和调试 JrPLT 教室",
            "command": "raco",
            "problemMatcher": [ "$gcc" ],
            "args": [ "wisemon", "-d", "cc-dbg" ],
            "options": { "cwd": "${workspaceFolder}" },
            "group": { "kind": "build", "isDefault": false },
            "windows": { "problemMatcher": ["$msCompile"] }
        }
    ]
}

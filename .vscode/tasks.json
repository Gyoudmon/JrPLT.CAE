{
    "tasks": [
        {
            "label": "快捷构建@macOS",
            "detail": "构建和运行当前活动文件",
            "command": "raco",
            "type": "cppbuild",
            "problemMatcher": ["$gcc"],
            "args": [
                "wisemon",
                "-d",
                "cc",
                "${file}"
            ],
            "options": {
                "cwd": "${fileDirname}"
            },
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "presentation": {
                "echo": false,
                "reveal": "always",
                "focus": false,
                "panel": "shared",
                "showReuseMessage": true,
                "clear": true
            }
        },

        {
            "label": "快捷构建@Windows",
